<!-- Page to change the password -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="/static/css/design.css">
</head>
<body>
    <%- include('../../partial/header') %>
    <div class="container">
        <h1>Reset Password!</h1>
        <%- include ('../../partial/messages') %>
        <form action="" method="POST" class="form-horizontal">
            <!-- errors: if -->
            <div class="form-group mb-2">
                <label for="password">New Password</label>
                <input type="password" name="password" id="password" class="form-control">
            </div>

            <div class="form-group">
                <label for="password2">Confirm Password</label>
                <input type="password" name="password2" id="password2" class="form-control">
            </div>

            <div class="form-group d-none">
                <input type="email" name="email" id="email" class="form-control" value="<%= email %>">
            </div>

            <div class="form-group d-none">
                <input type="text" name="token" id="token" class="form-control" value="<%= token %>">
            </div>

          
            <button type="submit" id="login" class="btn btn-success">Confirm</button>
        </form>
    <div>
</body>
</html>